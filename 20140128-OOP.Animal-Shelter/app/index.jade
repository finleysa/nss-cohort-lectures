doctype html
//if IE 9]><html class="lt-ie10" lang="en" > <![endf]
html(class="no-js" lang="en")

  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Foundation 5
    link(rel="stylesheet" href="css/normalize.css")
    link(rel="stylesheet" href="css/foundation.css")
    link(rel="stylesheet" href="css/app.css")
    script(src="js/vendor/modernizr.js")

  body
    
    .row
      .small-12.columns.panel
        h1 Animal Shelter
    .row
      .small-6.columns
        form
          fieldset
            legend Animal Form
            .row
              .small-6.columns
                label Name
              .small-6.columns
                label Species
            .row
              .small-6.columns
                input#name(type='text' autofocus=true) 
              .small-6.columns
                input#species(type='text') 
            .row
              .small-2.columns
                label Age
              .small-5.columns
                label Gender
              .small-5.columns
                label Color
            .row
              .small-2.columns
                input#age(type='text') 
              .small-5.columns
                input#gender(type='text') 
              .small-5.columns
                input#color(type='text') 
            .row
              .small-12.columns
                label Photo
            .row
              .small-9.columns
                input#photo(type='text') 
              .small-3.columns
                button.tiny.radius#add-photo Add Photo
            .row
              .small-12.columns
                label Description
            .row
              .small-8.columns
                textarea#description(type='text') 
              .small-4.columns
                button.small.radius#add-animal Add Animal!

      .small-6.columns
        form
          fieldset
            legend Photos Added
            #photos
    .row
      .small-12.columns
        table#animal-table
          thead
            tr
              th Name
              th Species
              th Age
              th Gender
              th Color
              th Description
              th Photos

          tbody#grid
        

    script(src="js/vendor/jquery.js")
    script(src="js/vendor/foundation.js")
    script(src="js/source/animal.js")
    script(src="js/source/animal_factory.js")
    script(src="js/source/main.js")
    script $(document).foundation();

